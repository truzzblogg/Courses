# Method 1:
import time

def run_again():
    num = 0
    while num < 10:
        print("Run it 10 times!")
        time.sleep(3)
        num += 1

run_again()

# Method 2:
import threading


def update():
    threading.Timer(2.0, update).start()
    print("Hello Internet!!")

update()
